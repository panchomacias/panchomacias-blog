<h1>My Blog</h1>
<% @blog_posts.each do |blog_post| %>
  <div>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <% if blog_post.draft? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Drafted</div>
    <% elsif blog_post.scheduled? %>
      <div class="p-w rounded bg-blue-100 text-blue-900">Scheduled</div>
    <% end %>
    <%= blog_post.content %>
    <% if blog_post.published_at.present? %>
      <p class="text-gray-500 text-sm italic"><%= time_ago_in_words(blog_post.published_at) %> ago</p>
    <% end %>
    <hr>
  </div>
<% end %>

